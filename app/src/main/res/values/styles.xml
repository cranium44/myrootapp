<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="textAllCaps">false</item>
        <item name="fontWeight">400</item>
        <item name="android:textColor">@color/font_color_secondary</item>
        <item name="android:textSize">@dimen/font_size_buttons</item>
        <item name="background">@drawable/btn_signup_bg</item>
    </style>

    <style name="ButtonStyle2" parent="Widget.AppCompat.Button">
        <item name="textAllCaps">false</item>
        <item name="fontWeight">400</item>
        <item name="android:textColor">@color/font_color_secondary</item>
        <item name="android:textSize">@dimen/font_size_buttons</item>
        <item name="background">@drawable/btn_login_bg</item>
    </style>

</resources>
